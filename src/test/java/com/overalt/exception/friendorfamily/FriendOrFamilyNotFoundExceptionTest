package com.overalt.exception.friendorfamily;

import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertThrows;

import org.junit.jupiter.api.Test;

public class FriendOrFamilyNotFoundExceptionTest {

    @Test
    public void testExceptionMessage() {
        // Define the contact number for the test
        long testContactNumber = 9876543210L;
        
        // Create the exception with the test contact number
        FriendOrFamilyNotFoundException exception = new FriendOrFamilyNotFoundException(testContactNumber);

        // Define the expected message
        String expectedMessage = "Friend or Family member not found with contact number: " + testContactNumber;

        // Verify that the exception message matches the expected message
        assertEquals(expectedMessage, exception.getMessage());
    }

    @Test
    public void testExceptionThrown() {
        // Define the contact number for the test
        long testContactNumber = 1234567890L;

        // Verify that the exception is thrown with the expected message
        FriendOrFamilyNotFoundException thrownException = assertThrows(
            FriendOrFamilyNotFoundException.class,
            () -> {
                throw new FriendOrFamilyNotFoundException(testContactNumber);
            }
        );

        // Define the expected message
        String expectedMessage = "Friend or Family member not found with contact number: " + testContactNumber;

        // Verify that the message of the thrown exception is correct
        assertEquals(expectedMessage, thrownException.getMessage());
    }
}
